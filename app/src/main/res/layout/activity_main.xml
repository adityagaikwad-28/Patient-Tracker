<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_x="32dp"
        android:layout_y="12dp"
        android:gravity="center"
        android:text="Welcome To Patient Tracker"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="144dp"
        android:layout_height="150dp"
        android:layout_x="128dp"
        android:layout_y="69dp"
        app:srcCompat="@drawable/admin" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="144dp"
        android:layout_height="150dp"
        android:layout_x="128dp"
        android:layout_y="278dp"
        app:srcCompat="@drawable/dcr" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="144dp"
        android:layout_height="152dp"
        android:layout_x="128dp"
        android:layout_y="491dp"
        app:srcCompat="@drawable/patient" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="157dp"
        android:layout_y="230dp"
        android:text="ADMIN"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="DuplicateIds,Hardcodedtexr" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="157dp"
        android:layout_y="442dp"
        android:text="DOCTOR"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="Hardcodedtexr" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="152dp"
        android:layout_y="657dp"
        android:text="PATIENT"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="Hardcodedtext" />
</AbsoluteLayout>